{
  "env": {
    "es6": true
  },
  "extends": [
    "plugin:itgalaxy/node",
    "plugin:itgalaxy/esnext",
    "plugin:itgalaxy/jest",
    "plugin:itgalaxy/markdown"
  ],
  "overrides": [
    {
      "files": ["src/**/*"],
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {
        "node/no-unsupported-features/es-syntax": "off"
      }
    },
    {
      "files": ["**/*.md"],
      "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
          "impliedStrict": true
        }
      },
      "rules": {
        "strict": "off",
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-process-env": "off",
        "no-process-exit": "off",
        "no-console": "off",
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "node/no-unpublished-require": "off",
        "node/no-unsupported-features/es-syntax": "off"
      }
    },
    {
      "files": ["*dist/**/*.js"],
      "rules": {
        "camelcase": "off",
        "dot-notation": "off",
        "id-length": "off",
        "max-statements-per-line": "off",
        "new-cap": "off",
        "no-underscore-dangle": "off",
        "no-var": "off",
        "quotes": "off",
        "spaced-comment": "off",
        "vars-on-top": "off"
      }
    },
    {
      "files": ["cli.js"],
      "rules": {
        "node/shebang": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "root": true
}
